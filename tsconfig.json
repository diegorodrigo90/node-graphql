{
    "compilerOptions": {
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "dist",
        "removeComments": true,
        "target": "es2020",
        "lib": ["esnext", "dom"]
    },
    "rules": {
        "camelcase": [2, {"properties": "always"}]
    },
    "include": [
        "./src/**/*.ts", 
        "./tests/**/*.ts", 
        "./typings/index.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}